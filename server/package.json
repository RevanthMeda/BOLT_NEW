{
  "name": "cully-server",
  "version": "1.0.0",
  "type": "module",
  "description": "Cully Report Management System Backend",
  "main": "server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "db:generate": "prisma generate --schema=../prisma/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=../prisma/schema.prisma",
    "db:seed": "tsx ../prisma/seed.ts",
    "db:reset": "prisma migrate reset --schema=../prisma/schema.prisma --force",
    "db:studio": "prisma studio --schema=../prisma/schema.prisma"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "zod": "^3.22.4",
    "winston": "^3.8.2",
    "@prisma/client": "^5.7.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "tsx": "^4.7.0"
  }
}