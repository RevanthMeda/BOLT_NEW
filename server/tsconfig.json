{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    // Add the types for Node and Prisma explicitly
    "types": ["node"],
    "typeRoots": ["./node_modules/@types", "./node_modules/.prisma/client"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
